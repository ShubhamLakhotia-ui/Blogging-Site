<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" height="500px" width="500px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBY.profileImage %>" width="50px"><%= blog.createdBY.fullName %>
    </div>
    <% if (locals.user) { %>
        <div class="container mt-3">
            <h1>Comments</h1>
            <form action="/blog/comments/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comments">
                </div>
                <button class="btn btn-sm btn-primary" type="submit">Add</button>
            </form>
        </div>
      
        
    <% } %>
    <% if (comments) { %>
        <div class="container mt-3">
            <% comments.forEach(comment => { %>
             <div>
                <img src="<%= comment.createdBY.profileImage %>" width="50px"><%= comment.createdBY.fullName %>
                <pre> <%= comment.content %></pre>
             </div>
            <% }) %>
        </div>
    <% } %>
 
    <%- include('./partials/scripts') %>
  </body>
</html>
